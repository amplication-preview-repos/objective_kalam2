datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Trade {
  createdAt DateTime  @default(now())
  id        String    @id @default(cuid())
  option    Option?   @relation(fields: [optionId], references: [id])
  optionId  String?
  price     Float?
  quantity  Int?
  tradeDate DateTime?
  updatedAt DateTime  @updatedAt
  user      User?     @relation(fields: [userId], references: [id])
  userId    String?
}

model User {
  createdAt  DateTime    @default(now())
  email      String?
  id         String      @id @default(cuid())
  password   String?
  portfolios Portfolio[]
  trades     Trade[]
  updatedAt  DateTime    @updatedAt
  username   String?
}

model Option {
  asset          Asset?    @relation(fields: [assetId], references: [id])
  assetId        String?
  createdAt      DateTime  @default(now())
  expirationDate DateTime?
  id             String    @id @default(cuid())
  strikePrice    Float?
  trades         Trade[]
  updatedAt      DateTime  @updatedAt
  volatility     Float?
}

model Asset {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  name      String?
  options   Option[]
  price     Float?
  updatedAt DateTime @updatedAt
  volume    Int?
}

model Portfolio {
  balance   Float?
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  name      String?
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}
